#:import FadeTransition  kivy.uix.screenmanager.FadeTransition
#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import colors kivymd.color_definitions.colors
<StyleSearchScreen@MDTextField>:
    hint_text: "default: 0"
    helper_text_mode: "on_focus"
    helper_text:""

<StyleLabel@MDLabel>:
    size_hint_y: None
    height: self.texture_size[1]

<StyleItemCheck@BoxLayout>
    group: ""
    text: ""
    active: False
    size_hint_y: 0
    height: self.minimum_height
    pos_hint: {'center_x': 0.5, 'center_y': 1}

    MDCheckbox:
        group: root.group
        active: root.active
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {"center_y": 0}
        on_active: app.callback(root.text, self.active)

    StyleLabel:
        text: root.text
        pos_hint: {"center_y": 0}


<StyleBackGround@BoxLayout>:
    orientation: "vertical"
    MDToolbar:
        id: toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        background_palette: "Primary"
        left_action_items: [["menu", lambda x: None]]

    MDSeparator:

<StyleFilter@ScrollView>
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        padding: dp(48)
        spacing: 10
        pos_hint: {'center_x': 0.5, 'center_y': 1}

        MDLabel:
            text: "Threshold value"

        StyleSearchScreen:
            id:th_val
            helper_text:"Please input number between 0 < x < 1.0"

        MDLabel:
            text: "Threshold length"

        StyleSearchScreen:
            id:th_len
            helper_text:"Please input number between 0 < x"

        MDLabel:
            text: "Fill gap"

        StyleSearchScreen:
            id:fill_gap
            helper_text:"Please input number between 0 < x"

<StyleKeyword@BoxLayout>:
    StyleSearchScreen:
        helper_text:"keyword search"

<StyleModeSelect@BoxLayout>:
    StyleItemCheck:
        group: "mode"
        text: "Keyword"
        active: True

    StyleItemCheck:
        group: "mode"
        text: "Filter"


<MDMenuItem>:
    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_color
    canvas.before:
	    Color:
			rgba: app.theme_cls.bg_light
		Rectangle:
			size: self.size
			pos: self.pos

<ResultBotton@BoxLayout>:
    value: ''

    MDRectangleFlatButton:
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        size_hint_x: 1
        size_hint_y: 1
        text: root.value
        pos_hint: {'center_x': .5}
        on_press: root.store_protain_propaty(root.index)
        on_release: MDDropdownMenu(items=root.menu_items, width_mult=3).open(self)


<ScreenSearch>:
    StyleBackGround:

        StyleModeSelect:
            size_hint_y: 0.1

        BoxLayout:
            size_hint_y: 0.75
            StyleFilter:
            StyleKeyword:

        MDRaisedButton:
            size_hint_y: 0.1
            text: "Search with this conditions"
            pos_hint: {"center_x": .5}
            on_press: root.btn_event()

        Label:
            size_hint_y:0.05




<ScreenWait>:
    StyleBackGround:
        Image:
            size: root.size
            allow_stretch: True
            keep_ratio: False
            size_hint_x:1
            size_hint_y:1
            source:'loading_bouningen.gif'

        MDRaisedButton:
            text: "Cancel"
            pos_hint: {"center_x": .5}
            on_press: root.btn_event()

        Label:
            size_hint_y:0.05

<ScreenOut>:
    rv: rv
    StyleBackGround:
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            RecycleBoxLayout:
                viewclass: 'ResultBotton'
                default_size: None, dp(60)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)







