<StyleTextField@MDTextField>:
    hint_text: "default: 0"
    helper_text_mode: "on_focus"
    helper_text:""

<StyleMenuTab@FloatLayout>:
    ScrollView:

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: dp(48)
            spacing: 10

            MDLabel:
                text: "Threshold value"

            StyleTextField:
                id:th_val
                helper_text:"Please input number between 0 < x < 1.0"


            MDLabel:
                text: "Threshold lengs"

            StyleTextField:
                id:th_len
                helper_text:"Please input number between 0 < x"


            MDLabel:
                text: "Fill gap"

            StyleTextField:
                id:fill_gap
                helper_text:"Please input number between 0 < x"


            MDRaisedButton:
                text: "Search with this condition"
                pos_hint: {"center_x": .5}
                on_press:
                    app.btn_event()
<MyTab>:
    StyleMenuTab:

BoxLayout:
    orientation: "vertical"

    MDToolbar:
        id: toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        background_palette: "Primary"
        left_action_items: [["menu", lambda x: None]]

    MDTabs:
        id: android_tabs


