<MenuTextField@MDTextField>:
    hint_text: "default: 0"
    helper_text_mode: "on_focus"
    helper_text:""

<ResultButton>:
    orientation:'horizontal'
    MDFlatButton:
        size_hint_x: 0.8
        text: ""
        on_press: root.btn_event(root.index, True)

    MDFlatButton:
        size_hint_x: 0.2
        text: "UniProt"
        on_press: root.btn_event(root.index, False)


<Keyword>:
    MDLabel:
        text: "Keyword"


<Filter>:
    ScrollView:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: dp(48)
            spacing: 10

            MDLabel:
                text: "Threshold value"

            MenuTextField:
                id:th_val
                helper_text:"Please input number between 0 < x < 1.0"


            MDLabel:
                text: "Threshold length"

            MenuTextField:
                id:th_len
                helper_text:"Please input number between 0 < x"


            MDLabel:
                text: "Fill gap"

            MenuTextField:
                id:fill_gap
                helper_text:"Please input number between 0 < x"


            MDRaisedButton:
                text: "Search with this conditions"
                pos_hint: {"center_x": .5}
                on_press:
                    root.btn_event()

<Result>:
    ScrollView:
        MDList:
            id: scroll

BoxLayout:
    orientation: "vertical"

    MDToolbar:
        id: toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        background_palette: "Primary"
        left_action_items: [["menu", lambda x: None]]

    MDSeparator:

    MDTabs:
        id: tabs




