#:import FadeTransition  kivy.uix.screenmanager.FadeTransition
<TopScreen>:
    BoxLayout:
        size:root.size

        Button:
            background_normal: 'body_cell.png'
            size:root.size
            size_hint:None,None
            text:'search screen '
            on_press: root.press_btn()#Top_Screenのメソッドが実行される

<SearchScreen>:
    BoxLayout:
        orientation:'vertical'
        size:root.size

        Label:
            text_size: self.size
            text:'Searching in MobiDB'

            halign: 'left'
            size_hint_x: 1
            size_hint_y:0.5
            font_size: 24

        Label:
            size_hint_y: 0.1
            text:''

        BoxLayout:
            size_hint_x:0.75
            size_hint_y:0.4
            orientation:'horizontal'
            pos_hint: {"x":0.25, "y":0.8}

            TextInput:
                id:text_box
                font_size: 22
                focus: True
                on_text_validate: root.text_btn()

        Label:
            size_hint_y: 0.1
            text:''

        FloatLayout:
            Button:
                text:"Search"
                size_hint_x: 0.23
                size_hint_y: 0.3
                pos_hint: {"x":0, "y":1.15}
                font_size: 20

                on_press:
                    root.press_btn()


            ToggleButton:
                id:Score
                text:"Score"
                size_hint_x: 0.23
                size_hint_y: 0.3
                pos_hint: {"x":0, "y":0.6}
                font_size: 20
                state:'normal'
                background_color :1, 1, 1, 0.9
                on_press:
                    root.Score_b()

            Spinner:
                id:sp_s
                size_hint_x: 0.23
                size_hint_y: 0.3
                sync_height:True
                text: ' '
                text_autoupdate:False
                values:'0.8', '0.7', '0.6', '0.5', '0.4', '0.3', '0.2', '0.1'
                pos_hint: {"x":0, "y":0.3}

            ToggleButton:
                id:Lengs
                text:"Lengs"
                size_hint_x: 0.23
                size_hint_y: 0.3
                pos_hint: {"x":0.39, "y":0.6}
                font_size: 20
                state:'normal'
                background_color : 1, 1, 1, 0.9
                on_press:
                    root.Lengs_b()

            Spinner:
                id:sp_l
                size_hint_x: 0.23
                size_hint_y: 0.3
                sync_height:True
                text: ' '
                values:'10', '20', '30'
                pos_hint: {"x":0.39, "y":0.3}


            ToggleButton:
                id:Gap
                text:"Gap"
                size_hint_x: 0.23
                size_hint_y: 0.3
                pos_hint: {"x":0.77, "y":0.6}
                font_size: 20
                state:'normal'
                background_color : 1, 1, 1, 0.9
                on_press:
                    root.Gap_b()

            Spinner:
                id:sp_g
                size_hint_x: 0.23
                size_hint_y: 0.3
                sync_height: True
                text: ' '
                values:[str(y) for y in range(1, 20) ]
                pos_hint: {"x":0.77, "y":0.3}

<WaitScreen>:
    BoxLayout:
        orientation:'vertical'
        size: root.size

        Label:
            size_hint_y: 0.1
            text:''

        Label:
            text_size: self.size
            text:'Searching Now'
            valign:'bottom'
            halign:'left'
            size_hint_x: 0.5
            size_hint_y:0.4
            font_size: 24
            pos_hint: {"x":0, "y":0.9}

        Image:
            size: root.size
            allow_stretch: True
            keep_ratio: False
            size_hint_x:1
            size_hint_y:0.4
            source:'loading4.gif'

        Label:
            size_hint_y: 0.1
            text:''

        Button:
            size: 50,50
            size_hint: None,None
            text:"cancel"
            on_press: root.press_btn()#Wait_Screenのメソッドが実行される

<VariousButtons>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: 'a'
    Button:
        text: self.value
        background_normal: ''
        background_color: 0.5, 0.5, 0.75, 1
        color: 1, 1 ,1 ,1
        on_press: root.on_select_button(self)

<OutputScreen>:
    RecycleView:
        canvas:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                size: self.size
                pos: self.pos

        RecycleBoxLayout:
            viewclass: 'VariousButtons'
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            orientation: 'vertical'
                    # multiselect: True
                    # touch_multiselect: True







