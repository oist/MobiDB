#:import FadeTransition  kivy.uix.screenmanager.FadeTransition
#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import colors kivymd.color_definitions.colors
<StyleSearchScreen@MDTextField>:
    hint_text: "default: 0"
    helper_text_mode: "on_focus"
    helper_text:""


<StyleBackGround@BoxLayout>:
    orientation: "vertical"
    MDToolbar:
        id: toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        background_palette: "Primary"
        left_action_items: [["menu", lambda x: None]]

    MDSeparator:


<ResultBotton@BoxLayout>:
    value: ''

    MDRectangleFlatButton:
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        size_hint_x: 1
        size_hint_y: 0.8
        text: root.value
        pos_hint: {'center_x': .5}
        on_press: root.store_protain_propaty(root.index)
        on_release: MDDropdownMenu(items=root.menu_items, width_mult=3).open(self)


<ScreenSearch>:
    StyleBackGround:

        MDSeparator:
        ScrollView:
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(48)
                spacing: 10

                MDLabel:
                    text: "Threshold value"

                StyleSearchScreen:
                    id:th_val
                    helper_text:"Please input number between 0 < x < 1.0"


                MDLabel:
                    text: "Threshold length"

                StyleSearchScreen:
                    id:th_len
                    helper_text:"Please input number between 0 < x"


                MDLabel:
                    text: "Fill gap"

                StyleSearchScreen:
                    id:fill_gap
                    helper_text:"Please input number between 0 < x"


                MDRaisedButton:
                    text: "Search with this conditions"
                    pos_hint: {"center_x": .5}
                    on_press:
                        root.btn_event()

<ScreenWait>:
    StyleBackGround:
        Image:
            size: root.size
            allow_stretch: True
            keep_ratio: False
            size_hint_x:1
            size_hint_y:1
            source:'loading_bouningen.gif'

        MDRaisedButton:
            text: "Cancel"
            pos_hint: {"center_x": .5}
            on_press: root.btn_event()

        Label:
            size_hint_y:0.05

<ScreenOut>:
    rv: rv
    StyleBackGround:
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            RecycleBoxLayout:
                viewclass: 'ResultBotton'
                default_size: None, dp(60)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)







